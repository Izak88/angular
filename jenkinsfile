pipeline {
    agent any
    stages {
	stage('install') {
	   steps {
		sh 'npm install'
	   }
	}
	stage('build') {
	    steps {
		sh './scripts/ci/angular.sh'
		sh './scripts/ci/build.sh'
	    }
	}
        stage('test') {
            steps {
		sh './scripts/ci/offline_compiler_test.sh'
            }
        }
    }
}

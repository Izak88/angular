pipeline {
    agent any
    stages {
	stage('install') {
	   steps {
		timestamps {
		sh 'npm install'
		}
	   }
	}
	stage('build') {
	    steps {
		timestamps {
		sh './scripts/ci/angular.sh'
		sh './scripts/ci/build.sh'
		}
	    }
	}
        stage('test') {
            steps {
		timestamps {
		sh './test.sh node'
		}
            }
        }
    }
}
